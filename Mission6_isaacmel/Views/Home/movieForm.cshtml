
@{
    ViewData["Title"] = "New Movie Form";
}

    @model Mission6_isaacmel.Models.MovieForm;
<div>
    <!-- form to add new movie to the dadtabase-->
    <form method="post">
        <label asp-for="CategoryId">Category:</label>
        <select asp-for="CategoryId">
            <option value="">Select</option>
            @foreach (Category option in ViewBag.Categories)
            {
                <option value="@option.CategoryId">@option.CategoryName</option>
            }
        </select><br />

        <label asp-for="Title">Movie Title:</label>
        <input asp-for="Title" type="text" /><br />

        <label asp-for="Year">Year:</label>
        <input asp-for="Year" type="text" /><br />

        <label asp-for="DirectorFirstName">Director First Name:</label>
        <input asp-for="DirectorFirstName" type="text" /><br />

        <label asp-for="DirectoryLastName">Director Last Name:</label>
        <input asp-for="DirectoryLastName" type="text" /><br />

        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select><br />

        <label asp-for="Edited">Edited:</label>
        <label for="true" asp-for="Edited">True</label>
            <input type="radio" id="true" value="true" asp-for="Edited"/>
        <label for="false" asp-for="Edited">False</label>
            <input type="radio" id="false" value="false" asp-for="Edited" /><br />

        <label asp-for="LentTo">Lent To</label>
        <input asp-for="LentTo" type="text" /><br />

        <label asp-for="Notes">Notes:</label>
        <input asp-for="Notes" type="text" />

        <input asp-for="ApplicationId" type="hidden" />
        <button type="submit">Submit</button>

        <div asp-validation-summary="All"></div>
    </form>
</div>